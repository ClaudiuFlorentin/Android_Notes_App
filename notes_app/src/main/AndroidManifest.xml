<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.claudiuapp.notesapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.claudiuapp.notesapp.Edit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.claudiuapp.notesapp.MainActivity" />
        </activity>
        <activity
            android:name="com.claudiuapp.notesapp.Detail"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.claudiuapp.notesapp.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.claudiuapp.notesapp.MainActivity" />
        </activity>
        <activity android:name="com.claudiuapp.notesapp.AddNote">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.claudiuapp.notesapp.MainActivity" />
        </activity>
        <activity android:name="com.claudiuapp.notesapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>